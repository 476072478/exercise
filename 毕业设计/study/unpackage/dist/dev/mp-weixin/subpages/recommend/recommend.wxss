.recommendview {
  background: linear-gradient(to top, #1d293c, #25354b);
  height: 100vh;
}
.page-item {
  width: 750rpx;
  overflow-x: hidden;
}
.sns-now .feeds-box {
  width: 735rpx;
  margin: 10px 0;
  display: flex;
  flex-wrap: wrap;
}
.sns-now .feeds-box .feed-one {
  width: 345rpx;
  margin: 10rpx;
  background-color: #FFF;
  border-radius: 20rpx;
  position: relative;
  -webkit-column-break-inside: avoid;
  break-inside: avoid;
  counter-increment: item-counter;
}
.sns-now .feeds-box .feed-one .feed-img {
  width: 100%;
  height: 300rpx;
  border-radius: 10rpx;
}
.sns-now .feeds-box .feed-one .feed-title {
  width: 350rpx;
  margin-top: 15rpx;
  margin-left: 10rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #001432;
  text-align: left;
}
.sns-now .feeds-box .feed-one .feed-info {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  align-content: center;
  margin-top: 10rpx;
  font-size: 20rpx;
  color: #666;
  padding: 0 10rpx 16rpx;
}
.sns-now .feeds-box .feed-one .feed-info .iview {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  align-content: center;
}
.sns-now .feeds-box .feed-one .feed-info .iview .ilike {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  align-content: center;
  height: 60rpx;
  padding: 0 10rpx;
  background-color: #FFFFFF;
}
.sns-now .feeds-box .feed-one .feed-info .avatar {
  margin-right: 10rpx;
  height: 40rpx;
  width: 40rpx;
  border-radius: 50%;
  border: 1rpx solid #eee;
}
.sns-now .feeds-box .feed-one .feed-info .name {
  max-width: 120rpx;
  color: #757474;
}
.sns-now .feeds-box .feed-one .feed-info .micon {
  width: 32rpx;
  height: 28rpx;
}
.sns-now .feeds-box .feed-one .feed-info .love-count {
  padding-left: 10rpx;
  color: #757474;
}

